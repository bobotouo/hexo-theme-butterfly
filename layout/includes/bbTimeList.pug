 #bber
    section.timeline.page-1
        ul#waterfall.list.show
            each i in site.data.essay
                each item, index in i.essay_list
                  if index < 10
                        li.item
                            .bber-content
                                p.datacont= item.content
                                    if item.images
                                        .bber-images
                                            each img,kindex in item.images
                                           
                                                .bber-content-img
                                                    a.fancybox(target='_blank', rel='noopener', href=img, data-fancybox='gallery', data-caption)
                                                        img.bber-content-image-self.entered.loading(src=img,data-ll-status='loading')
                            if item.music
                                .bber-music
                                    div.aplayer(data-id=item.music.id data-server=item.music.server data-type="song")
                            if item.video                                
                                video.vvdeo(src=item.video,controls,preload)
                            hr
                            .bber-bottom
                                .bber-info
                                    .bber-info-time
                                        i.fa-solid.fa-calendar-days
                                        - var datedata = moment(item.date).subtract(8, 'h').format('YYYY/MM/DD HH:mm')          
                                        time.datatime()= datedata
                                    if item.link
                                        a.bber-content-link(href=item.link, target="_blank", rel="external nofollow", title="跳转到短文指引的链接")
                                            i.fas.fa-link
                                            | 链接
                                a.bber-reply(onclick=`jumpToComment('${item.content}')`)
                                    i.fa-solid.fa-message

